{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDirs": ["./", "./src"],                                   
    "declaration": true,                              
    "declarationDir": "./libs/declarations/",
    "outDir": "./libs",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
